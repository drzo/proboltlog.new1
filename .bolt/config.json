{
  "name": "cognitive-tokamak-ui",
  "version": "1.0.0",
  "description": "A visually stunning and futuristic interface for the Cognitive Tokamak project, built with Nuxt 3, Tailwind CSS, and cutting-edge visualization tools.",
  "main": "index.js",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "start": "nuxt start",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.0.0", 
    "@nuxtjs/color-mode": "^3.0.0", 
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "tailwindcss-animate": "^1.0.6",
    "heroicons": "^2.0.13",
    "cytoscape": "^3.23.0", 
    "three": "^0.152.2", 
    "vue-draggable-next": "^2.1.2"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@types/node": "^18.16.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.39.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.14.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.3"
  },
  "nuxtConfig": {
    "ssr": true,
    "modules": [
      "@nuxtjs/tailwindcss",
      "@nuxtjs/color-mode"
    ],
    "colorMode": {
      "preference": "dark",
      "fallback": "dark",
      "hid": "nuxt-color-mode-script",
      "globalName": "__NUXT_COLOR_MODE__",
      "classPrefix": "",
      "classSuffix": "-mode"
    },
    "tailwindcss": {
      "cssPath": "~/assets/css/tailwind.css",
      "configPath": "tailwind.config.js",
      "exposeConfig": false
    }
  },
  "browserslist": [
    "defaults"
  ]
}
